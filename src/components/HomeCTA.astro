---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from './ui/Section.astro'
import Row from './ui/Row.astro'
import Col from './ui/Col.astro'
// - UI
import { Image } from 'astro:assets'
import Button from './ui/Button.astro'
import '../styles/gradient.css';

// Content
// - Hero Image
import heroImage from '../assets/hero-01.png'
import factoryImage from '../assets/Factory7.png'
---

<Section id="intro" classes="bg-neutral-50 dark:bg-neutral-900 gradient-background hero-section">
  <Row>
    <!-- Left Column: Title and Text -->
    <Col span="1" class="p-4">
      <h1>Transform <strong>Unstructured Data</strong> for AI Applications</h1>
      <p class="pb-0 text-lg">An open-source ingestion pipeline designed to transform unstructured data into vectorized formats for integration with knowledge bases</p>

      <!-- Button Container -->
      <div class="button-container">
        <Button size="lg" link="/case-study" classes="case-study-button">Read the Case Study</Button>
        <Button size="lg" link="https://github.com/splinter-app/" classes="github-button">Download from GitHub</Button>
      </div>
    </Col>

    <!-- Right Column: Image -->
    <Col span="1" class="p-0">
      <Image
        src={factoryImage}
        alt="Splinter UI"
        class="w-full h-full object-cover shadow-neutral-200 dark:shadow-neutral-950"
        id="factory-image"
        format="webp"
      />
    </Col>
  </Row>
</Section>

<style global>
  /* Hero Section Styles */
  .hero-section {
    min-height: 75vh; /* Ensures the Hero section takes at least 75% of the viewport height */
  }

  /* General Row and Column Layout */
  .hero-section .row {
    display: grid;
    grid-template-columns: 1fr 1fr; /* 2 equal parts for the text and the image */
    gap: 2rem; /* Space between text and image */
    align-items: center; /* Vertically centers the content */
  }

  /* Column Styling */
  .hero-section .col {
    padding-left: 0;
    padding-right: 0;
  }

  /* Text Column (Left) Styling */
  .hero-section .col:first-child {
    padding-left: 2rem; /* Adds padding to the left column */
  }

  /* Image Column (Right) Styling */
  .hero-section .col:last-child {
    padding-right: 0;
  }

  /* Button Container Styles */
  .hero-section .button-container {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    margin-top: 1.5rem;
  }

  /* Button Styling */
  .hero-section .button-container .button {
    padding: 1rem 1.5rem;
    border-radius: 8px; /* Rounded corners for the buttons */
    text-align: center; /* Center text */
    border: 2px solid transparent; /* Default transparent border */
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  /* Case Study Button: Orange Solid */
  .hero-section .button-container .button.case-study-button {
    background-color: #FD7854; /* Orange background */
    color: white; /* White text */
  }

  /* Case Study Button Hover: Invert colors */
  .hero-section .button-container .button.case-study-button:hover {
    background-color: white; /* White background */
    color: #FD7854; /* Orange text */
    border-color: #FD7854; /* Orange border on hover */
  }

  /* GitHub Button: Blue Solid */
  .hero-section .button-container .button.github-button {
    background-color: #4078c0; /* Blue background */
    color: white; /* White text */
  }

  /* GitHub Button Hover: Invert colors */
  .hero-section .button-container .button.github-button:hover {
    background-color: white; /* White background */
    color: #4078c0; /* Blue text */
    border-color: #4078c0; /* Blue border on hover */
  }

  .hero-section h1 strong {
    background: linear-gradient(to right, #FFB84D, #FD7854);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  /* Media Query for Smaller Screens */
  @media (max-width: 768px) {
    .hero-section .row {
      grid-template-columns: 1fr; /* Stack the columns on small screens */
      gap: 1rem;
    }

    .hero-section .col:first-child {
      padding-left: 0; /* Remove extra padding on small screens */
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    .hero-section .button-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
    }

    .hero-section .button-container .button {
    max-width: 400px; /* Set the maximum width */
    width: 100%; /* Allow it to shrink or grow within its max-width */
    margin: 0 auto; /* Center the button if it's smaller than the parent */
  }
  }
</style>
