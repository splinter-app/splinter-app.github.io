---
import github from '../assets/github-mark.svg'
import linkedin from '../assets/linkedin.svg'
const developers = [
  {
    name: "Amir Sadeghifar",
    role: "Software Engineer",
    photo: "https://avatars.githubusercontent.com/u/129813120?v=4",
    city: "Miami, FL",
    github:"https://github.com/amirsadeghifar",
    linkedin: "link.com",
  },
  {
    name: "Brian Ouyang",
    role: "Software Engineer",
    photo: "https://avatars.githubusercontent.com/u/12991354?v=4",
    city: "Los Angeles, CA",
    github: "https://github.com/bouyang",
    linkedin: "link.com",
  },
  {
    name: "Harold Camacho",
    role: "Software Engineer",
    photo: "https://avatars.githubusercontent.com/u/87204490?v=4",
    city: "Toronto, Canada",
    github: "https://github.com/camachoh1",
    linkedin: "link.com",
  },
  {
    name: "Ricardo Delgado",
    role: "Software Engineer",
    photo: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSzPzbZotYQdx6Xdkfz8FeJUPWu5-ufox82Bw&s",
    city: "Houston, TX",
    github: "https://github.com/rgd731",
    linkedin:"link.com",
  },
];
---

<section class="team-section" id="team">
  <div class="container">
    <h3 class="h2-title center">Meet the Team</h3>

    <div class="team-grid">
      {developers.map((developer) => (
        <div class="team-card">
          <img src={developer.photo} alt={developer.name} class="team-photo" />
          <h3 class="h3-title">{developer.name}</h3>
          <p class="role">{developer.role}</p>
          <p class="s-paragraph">{developer.city}</p>
          <div class="social-links">
            <a href={developer.github} target="_blank" rel="noopener noreferrer">
              <img src={github.src} alt="GitHub Logo" class="social-icon" />
            </a>
            <a href={developer.linkedin} target="_blank" rel="noopener noreferrer">
              <img src={linkedin.src} alt="LinkedIn Logo" class="social-icon" />
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    padding: 70px 0;
    max-width: 1200px;
    margin: 0 auto;
  }
  .team-section .h2-title {
    font-size: 2.5rem; /* Reduced font size */
    margin-bottom: 60px; /* Added space below the title */
    font-weight: 700;
    text-align: center;
  }
  .team-section .team-grid {
    display: flex;
    gap: 30px;
    justify-content: center;
    flex-wrap: nowrap; /* Default layout: single row */
    padding: 0 20px;
  }
  .team-section .team-card {
    background: #fbfbfb;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    min-width: 250px;
  }
  .team-section .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 12px rgba(255, 85, 0, 0.797);
  }
  .team-section .team-photo {
    width: 120px; 
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
    margin: 0 auto 15px auto;
    display: block;
  }
  .team-section .h3-title {
    font-size: 1.5rem; 
    margin-bottom: 10px;
    font-weight: 600;
  }
  .team-section .role {
    font-size: 1rem; 
    color: var(--accent);
    font-weight: 500;
    margin-bottom: 10px;
  }
  .team-section .s-paragraph {
    font-size: 0.9rem; 
    color: #555;
  }
  .team-section .social-links {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    gap: 15px;
  }
  .team-section .social-icon {
    width: 30px;
    height: 30px;
    transition: transform 0.2s;
  }

  .team-section .social-icon:hover {
    transform: scale(1.1);
  }

  /* Responsive Design: Vertical Layout for Narrow Screens */
  @media (max-width: 768px) {
    .team-section .team-grid {
      flex-wrap: wrap; /* Cards stack vertically */
      gap: 20px; /* Smaller gap for vertical layout */
    }
  }
</style>