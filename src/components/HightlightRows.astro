---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from './TextImage.astro'

// Content
import highlight01 from '../assets/highlights/screenshots-combined.png'
import highlight01mobile from '../assets/highlights/screenshots-combined.png'
import highlight02 from '../assets/highlights/architecture.png'
import highlight02mobile from '../assets/highlights/architecture.png'
import highlight03 from '../assets/highlights/screenshot-cli.png'
import highlight03mobile from '../assets/highlights/screenshot-cli.png'
import highlight04 from '../assets/highlights/screenshot-cdk.png'
import highlight04mobile from '../assets/highlights/screenshot-cdk.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: '<strong>CLI</strong> Tool',
		text: 'Splinter includes a CLI tool to simplify pipeline deployment, making it easily accessible for developers.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: 500,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Automated <strong>Deployment</strong>',
		text: 'Splinter is fully built using AWS architecture, meaning developers only need an active AWS account to deploy the pipeline. Splinter’s self-managed, serverless design makes it especially useful for organizations seeking both scalability and control over their unstructured data pipelines.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: 600,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	},
  {
		title: 'Data Pipeline <strong>Observability</strong> & <strong>RAG</strong> Sandbox',
		text: 'This dashboard offers real-time updates during the ingestion process. The built-in RAG chatbot uses the user’s destination database as a knowledge base. The chatbot updates its context based on the documents in the knowledge base, allowing users to verify the accuracy of the ingested data.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
  {
		title: '<strong>Ephemeral</strong> and <strong>Event-Driven</strong> Architecture',
		text: 'Splinter’s ephemeral, event-driven design ensures that it "scales to zero," eliminating costs for idle compute resources. Its infrastructure components remain dormant until ingestion is required, triggering operations only when needed.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			// classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!pb-20'}
      
		/>
	))
}
